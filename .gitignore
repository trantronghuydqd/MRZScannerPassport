# Ignore everything by default
*

# Allow specific files
!*.py
!*.json

# Allow all markdown files
!*.md

# Allow all text files
!*.txt

# Allow .gitignore itself
!.gitignore

# Ignore Python cache
__pycache__/
*.pyc
*.pyo
*.pyd

# Ignore virtual environment (all files inside)
venv/
venv/*
venv/**/*
env/
env/*
env/**/*
ENV/
ENV/*
ENV/**/*

# Ignore IDE files
.vscode/
.idea/
*.swp
*.swo

# Ignore OS files
.DS_Store
Thumbs.db
desktop.ini

# Ignore logs and temp files
*.log
*.tmp
debug_*.jpg
*_rotated.jpg

# Ignore build artifacts and executables
build/
dist/
*.exe
*.spec

